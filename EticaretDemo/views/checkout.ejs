                    </div>
                    <!--/.Card-->
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-4 mb-4">
                    <!-- Heading -->
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Sipariş Özetiniz</span>

                    </h4>

                    <!-- Cart -->
                    <ul class="list-group mb-3 z-depth-1">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Vergiler Toplam Fiyat</h6>
                                <small class="text-muted">Vergiler dahil değil.</small>
                            </div>
                            <span class="text-muted"><%=data.alttoplam%></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Toplam ödenecek vergi.</h6>
                                <small class="text-muted">Ödemeniz gereken vergi.</small>
                            </div>
                            <span class="text-muted"><%=data.vergi%></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Kargo Ücreti</h6>
                                <small class="text-muted">Ödemeniz gereken taşıma ücreti.</small>
                            </div>
                            <span class="text-muted"><%=data.kargo%></span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between">
                            <span>Toplam Fiyat</span>
                            <strong><%=data.toplamfiyat%></strong>
                        </li>
                    </ul>
                    <!-- Cart -->
                </div>

                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
    </main>
</body>
