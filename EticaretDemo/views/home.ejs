  <section class="card" style="width: 18rem;">
    <%  items.forEach(function(item){ %>

    <form action="/sepeteekle" method="post">
      <div class="card-body">
        <div>
          <img class="urun-resmi"
            src="data:item/<%=item.urunResmi.contentType%>;base64,<%=item.urunResmi.data.toString('base64')%>">
        </div>
        <h1 class="card-title"><%=item.urunAdi%></h1>
        <p class="card-text"><%=item.urunAciklamasi%></p>
        <p class="card-text urun-fiyati"><%=item.urunFiyati%></p>
        <input type="hidden" name="itemId" value="<%=item._id%>">
        <input type="hidden" name="itemAd" value="<%=item.urunAdi%>">
        <input type="hidden" name="itemAciklama" value="<%=item.urunAciklamasi%>">
        <input type="hidden" name="itemFiyati" value="<%=item.urunFiyati%>">
        <input type="hidden" name="itemResmi"
          value="data:item/<%=item.urunResmi.contentType%>;base64,<%=item.urunResmi.data.toString('base64')%>">
        <input type="submit" name="submit" id="sepeteekle" value="Sepete Ekle"></input>
      </div>
    </form>
    <% }) %>

  </section>

